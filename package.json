{
  "name": "world-class-blog-portfolio",
  "private": true,
  "workspaces": [
    "frontend",
    "backend"
  ],
  "overrides": {
    "ajv": "^8.12.0"
  },
  "scripts": {
    "dev": "pnpm --filter frontend dev",
    "docker:dev": "docker compose --profile dev up",
    "docker:dev:build": "docker compose --profile dev up --build",
    "docker:prod": "docker compose --profile prod up",
    "docker:prod:build": "docker compose --profile prod up --build",
    "build": "pnpm --filter frontend build",
    "start": "pnpm --filter frontend start",
    "lint": "pnpm --filter frontend lint",
    "test": "pnpm --filter frontend test",
    "test:e2e": "pnpm --filter frontend test:e2e",
    "storybook": "pnpm --filter frontend storybook"
  },
  "devDependencies": {
    "pnpm": "^9.0.0"
  },
  "packageManager": "pnpm@9.0.0"
}
